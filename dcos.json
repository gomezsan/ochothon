{
    "id":   "ocho-proxy",
    "cpu":  1,
    "mem":  512,
    "env":
    {
        "ochopod_cluster":  "portal",
        "ochopod_debug":    "true",
        "ochopod_token":    "UPTOWN_GIRL"
    },
    "acceptedResourceRoles":
        [
            "slave_public"
        ],
    "uris": [
        "file:///home/core/docker.tar.gz"
    ],
    "container":
    {
        "type":"DOCKER",
        "docker":
        {
            "forcePullImage":               true,
            "network":                      "BRIDGE",
            "image":                        "gomesa/ochothon:1.0.2",
            "portMappings":
                [
                    {
                        "containerPort":    8080
                    },
                    {
                        "hostPort":         9000,
                        "containerPort":    9000
                    }
                ]
        },
        "volumes":[
            {
                "containerPath":            "/opt/mesosphere",
                "hostPath":                 "/opt/mesosphere",
                "mode":                     "RO"
            }
        ]
    }
}
